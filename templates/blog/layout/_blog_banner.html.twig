 {# Start Banner  #}
<div class="banner-headline-blog d-flex flex-column justify-content-center">
    <div class="container">
        <div class="card card-banner">
            <div class="card-body card-banner text-center d-lg-flex flex-lg-column align-items-lg-end justify-content-lg-center">
                <h5 class="card-title">Vous souhaitez poster un article ?</h5>
                <p class="card-text px-3 pb-3">Un évènement? une manifestation? Partagez cela avec nous !</p>
                {% if app.user %}
                <a href="{{ path ('create_article') }}" class="btn btn-primary">Ajouter un article</a>
                {% endif %}
                {% if app.user == false %}
                <a href="{{ path ('create_account') }}" class="btn btn-primary">Créez un compte</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{# End Banner  #}
