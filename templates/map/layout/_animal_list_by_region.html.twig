{# Start Animal list  #}
<div class="container py-4 px-2 padding-section">
    <div class="text-center content-section">

        {# Essai bouton filtre #}
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle d-none" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Filtrer par Département
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            {% for department in region.departments %}
            <a class="dropdown-item" href="{{ path('pet_list_by_department', {id: department.id}) }}">{{department.name}}</a>
            {% endfor %}
            </div>
        {# Essai bouton filtre #}
        </div>

        <h2 class="display-5 mt-3">Tout les animaux signalés de la région {{ region.name}} </h2>
        <div class="custom-underline mx-auto my-4"></div>
    </div>
    <div class="d-flex flex-wrap justify-content-center">

        {# Start Loop Animal  #}
        {% for animalByRegion in animalsByRegion %}

            <div class="card mx-2 mb-4" style="width: 350px">
                <div class="crop-picture carousel-img d-flex align-items-center mb-2">
                    <img class="image" src="{{ asset('uploads/' ~ animalByRegion.image) }}" alt="Animal Pictures"/>
                    <div class="overlay"></div>
                </div>
                <div class="card-body px-0 pb-0 text-center card-deco card-body-carousel">
                    <h5 class="card-title font-color font-weight-bold text-capitalize">{{ animalByRegion.type.name}} {{ animalByRegion.status }} </h5>
                    <p class="card-text text-muted mb-0">Ville : {{ animalByRegion.city}} ({{ animalByRegion.department.name}})</p>
                    <p class="card-text text-muted mb-0">  Sexe : {{ animalByRegion.sex}}</p>
                    <p class="card-text text-muted">  Date : {{ animalByRegion.createdAt.date|date("d/m/Y")}}</p>
                    <a href="{{ path('animal_view', {id:  animalByRegion.id}) }}" class="btn py-3 btn-link">En savoir plus</a>
                </div>
            </div>

        {% endfor %}
        {# End Loop Animal #}
    </div> 
    {# Pagination #}
    <div class="navigation">
        {{ knp_pagination_render(animalsByRegion) }}
    </div>
</div>
{# Start Animal list  #}