{% extends 'base.html.twig' %}

{% block title %}Se connecter | EspoirSurPattes{% endblock %}

{% block body %}

    {% include "security/layout/_form_banner.html.twig" %}

<form class="container signin-container" method="post">
    <div class="login-container-children">
        <div class="shadow-login-form">
        
            {#
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %} 
            #}

            <div class="login-form-header text-center">
                <div class="circle-icon-signup d-inline-flex">
                    <i class="fas fa-sign-in-alt"></i>            
                </div>
                <h3>Se connecter</h3>        
            </div>

            <div class="border-outter pt-0">
            {% if error %}
                <div class="alert alert-danger py-2 mt-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

                {# <label for="inputEmail">Email</label> #}

                <p class="info-form m-0 mt-4 p-0">Email</p>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control select-rows" required autofocus>

                {# <label for="inputPassword">Password</label> #}

                <p class="info-form m-0 p-0">Mot de passe<span class="text-muted"> (min. 8 caractères)</span></p>
                <input type="password" name="password" id="inputPassword" class="form-control select-rows mb-0" required>
                <p class="text-footer-login-form text-right p-0 m-0 mb-4"><small><a href="{{ path('app_forgotten_password') }}">Mot de passe oublié ?</a></small></p>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
                #}

                <div class="checkbox select-rows">
                    <label class="m-0 text-muted">
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                </div>
                <div class="login-btn-holder text-center">
                    <button class="select-rows form-btn" type="submit">
                        Se connecter
                    </button>
                </div>
                <p class="text-footer-login-form text-center">Pas encore membre ? <a href="{{ path('create_account') }}">Inscrivez-vous ici</a></p>
            </div>
            <div class="footer-login-form"></div>
        </div>
    </div>

</form>
{% endblock %}
